<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textSize="32sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:id="@+id/solution_tv"
        android:layout_margin="16dp"
        android:layout_above="@+id/result_tv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="65sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:id="@+id/result_tv"
        android:layout_margin="16dp"
        android:layout_above="@+id/buttons_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#B2B6B5B5"
        android:orientation="vertical"
        android:paddingVertical="17dp"
        android:id="@+id/buttons_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:id="@+id/button_c"
                android:backgroundTint="#C50A6D"
                android:layout_margin="13dp"
                android:text="C"/>

            <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="33dp"
            android:textColor="@color/white"
            android:id="@+id/button_open_bracket"
                app:backgroundTint="#B9706F6B"
            android:layout_margin="13dp"
            android:text="("/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:id="@+id/button_close_bracket"
                android:backgroundTint="#B9706F6B"
                android:layout_margin="13dp"
                android:text=")"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:backgroundTint="#F18A53"
                android:id="@+id/button_divide"
                android:layout_margin="13dp"
                android:text="/"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:id="@+id/button_7"
                android:backgroundTint="#1BA9AF"
                android:layout_margin="13dp"
                android:text="7"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:id="@+id/button_8"
                app:backgroundTint="#1BA9AF"
                android:layout_margin="13dp"
                android:text="8"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:id="@+id/button_9"
                android:backgroundTint="#1BA9AF"
                android:layout_margin="13dp"
                android:text="9"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:backgroundTint="#F18A53"
                android:id="@+id/button_multiply"
                android:layout_margin="13dp"
                android:text="*"/>



        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="33dp"
            android:textColor="@color/white"
            android:id="@+id/button_4"
            android:backgroundTint="#1BA9AF"
            android:layout_margin="13dp"
            android:text="4"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="33dp"
            android:textColor="@color/white"
            android:id="@+id/button_5"
            app:backgroundTint="#1BA9AF"
            android:layout_margin="13dp"
            android:text="5"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="33dp"
            android:textColor="@color/white"
            android:id="@+id/button_6"
            android:backgroundTint="#1BA9AF"
            android:layout_margin="13dp"
            android:text="6"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="33dp"
            android:textColor="@color/white"
            android:backgroundTint="#F18A53"
            android:id="@+id/button_sum"
            android:layout_margin="13dp"
            android:text="+"/>



    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:id="@+id/button_1"
                android:backgroundTint="#1BA9AF"
                android:layout_margin="13dp"
                android:text="1"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:id="@+id/button_2"
                app:backgroundTint="#1BA9AF"
                android:layout_margin="13dp"
                android:text="2"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:id="@+id/button_3"
                android:backgroundTint="#1BA9AF"
                android:layout_margin="13dp"
                android:text="3"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:backgroundTint="#F18A53"
                android:id="@+id/button_sub"
                android:layout_margin="13dp"
                android:text="-"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="21dp"
                android:textColor="@color/white"
                android:id="@+id/button_ac"
                android:backgroundTint="#C50A6D"
                android:layout_margin="13dp"
                android:text="AC"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:id="@+id/button_0"
                app:backgroundTint="#1BA9AF"
                android:layout_margin="13dp"
                android:text="0"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="44dp"
                android:textColor="@color/white"
                android:id="@+id/button_dot"
                android:backgroundTint="#1BA9AF"
                android:layout_margin="13dp"
                android:text="."/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="33dp"
                android:textColor="@color/white"
                android:backgroundTint="#F18A53"
                android:id="@+id/button_equals"
                android:layout_margin="13dp"
                android:text="="/>



        </LinearLayout>




    </LinearLayout>



</RelativeLayout>